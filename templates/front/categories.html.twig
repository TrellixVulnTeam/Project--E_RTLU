{% extends 'base.html.twig' %}

{% block main %}
    <section>
        {% for category in categories %}
            <h1><a href="{{ path('show_category', {'id':category.id}) }}"><p>{{ category.titre }}</p></a></h1>

           <img class="category-img" src="{{ asset('assets/uploads/images/'~ category.image ) }}" alt="{{ category.titre }}">
        {% endfor %}
    </section>
{% endblock %}
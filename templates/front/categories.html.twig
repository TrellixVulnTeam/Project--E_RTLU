{% extends 'base.html.twig' %}

{% block main %}
    <section class="categories">
        {% for category in categories %}
        <div class="category-wrapper">
            <img class="category-img" src="{{ asset('assets/uploads/images/'~ category.image ) }}" alt="{{ category.titre }}">
            <h2><a href="{{ path('show_category', {'id':category.id}) }}"><p class="nameCategory">{{ category.titre }}</p></a></h2>
        </div>
        {% endfor %}
    </section>
{% endblock %}